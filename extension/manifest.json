
{
  "manifest_version": 3,
  "name": "MURIELL Watcher",
  "version": "1.0",
  "description": "Aggressive productivity monitoring for the MURIELL Discipline Engine.",
  "permissions": ["tabs", "storage", "alarms", "notifications"],
  "host_permissions": ["*://*/*"],
  "externally_connectable": {
    "matches": ["*://localhost/*", "*://*.muriell.app/*"]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "../logo.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
